  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "noEmitOnError": true,
    "rootDir": "src",
